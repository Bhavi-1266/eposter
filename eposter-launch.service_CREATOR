sudo tee /etc/systemd/system/eposter-launch.service > /dev/null <<'UNIT'
[Unit]
Description=PosterBridge Launcher (runs slideshow)
After=network.target
Wants=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/home/eposter
Environment=SDL_VIDEODRIVER=fbcon
Environment=PYTHONUNBUFFERED=1
ExecStart=/bin/bash /home/eposter/launcher.sh
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target
UNIT
